{
  "private": true,
  "name": "cktidy.xyz",
  "version": "0.0.0",
  "description": "A personal website showcasing information about me and my articles!",
  "license": "MIT",
  "author": "ckt1031",
  "type": "module",
  "scripts": {
    "build": "next build",
    "commit": "cz",
    "dev": "next dev -p 4072",
    "format": "prettier . -w",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --fix .",
    "prepare": "is-ci || husky install",
    "start": "next start",
    "typecheck": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@next/env": "13.4.4",
    "@sanity/client": "6.1.2",
    "@sanity/image-url": "1.0.2",
    "@sentry/nextjs": "7.53.1",
    "@t3-oss/env-nextjs": "0.4.0",
    "@tabler/icons-react": "2.20.0",
    "@wits/next-themes": "0.2.16",
    "clsx": "1.2.1",
    "cssnano": "6.0.1",
    "csstype": "3.1.2",
    "dayjs": "1.11.7",
    "esbuild": "0.17.19",
    "feed": "4.2.2",
    "fuse.js": "6.6.2",
    "is-ci": "3.0.1",
    "next": "13.4.4",
    "next-mdx-remote": "4.4.1",
    "next-sitemap": "4.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "6.1.1",
    "rehype-code-titles": "1.2.0",
    "rehype-external-img-size": "0.1.0",
    "rehype-external-links": "2.1.0",
    "rehype-slug": "5.1.0",
    "remark-gfm": "3.0.1",
    "remark-normalize-headings": "3.0.1",
    "remark-parse": "10.0.1",
    "remark-unwrap-images": "3.0.1",
    "s-ago": "2.2.0",
    "server-only": "0.0.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@ckt1031/eslint-config": "1.1.6",
    "@ckt1031/prettier-config": "1.1.6",
    "@ckt1031/tsconfig": "1.1.6",
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@tailwindcss/typography": "0.5.9",
    "@types/is-ci": "3.0.0",
    "@types/node": "20.2.3",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "10.4.14",
    "commitizen": "4.3.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.4",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "picocolors": "1.0.0",
    "postcss": "8.4.24",
    "prettier": "2.8.8",
    "tailwindcss": "3.3.2",
    "tsx": "3.12.7",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "@ckt1031/eslint-config/typescript-strict"
    ],
    "ignorePatterns": [
      "next-env.d.ts"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "project": "./tsconfig.json"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.{yml,cjs,mjs,js,jsx,ts,tsx,json,css,html,md}": [
      "prettier -c"
    ]
  },
  "packageManager": "pnpm@8.6.0",
  "prettier": "@ckt1031/prettier-config"
}
