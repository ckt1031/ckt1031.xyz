{
  "private": true,
  "name": "ckt1031.xyz",
  "version": "0.0.0",
  "description": "A personal website showcasing information about me and my articles!",
  "license": "MIT",
  "author": "ckt1031",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro build && npx pagefind --site dist",
    "commit": "cz",
    "dev": "astro dev",
    "format": "biome format . --write",
    "preinstall": "npx only-allow bun",
    "prepare": "is-ci || husky install || true",
    "start": "astro dev",
    "check": "biome check . && astro check && biome format . --write",
    "preview": "astro preview"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@astrojs/check": "0.5.6",
    "@astrojs/mdx": "2.1.1",
    "@astrojs/rss": "4.0.5",
    "@astrojs/sitemap": "3.1.1",
    "@astrojs/tailwind": "5.1.0",
    "@fireworks-js/web": "2.10.7",
    "@fontsource-variable/inter": "5.0.16",
    "@fontsource/noto-sans-tc": "5.0.17",
    "astro": "4.4.9",
    "astro-compress": "astro-community/AstroCompress#no-sharp",
    "astro-icon": "1.1.0",
    "astro-robots-txt": "1.0.0",
    "astro-seo": "0.8.3",
    "clsx": "^2.1.0",
    "dayjs": "1.11.10",
    "fireworks-js": "2.10.7",
    "is-ci": "3.0.1",
    "magic-snowflakes": "6.3.0",
    "markdown-it": "14.0.0",
    "pagefind": "1.0.4",
    "purgecss": "5.0.0",
    "reading-time": "1.5.0",
    "s-ago": "2.2.0",
    "sanitize-html": "2.12.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "1.5.3",
    "@biomejs/biome": "1.5.3",
    "@ckt1031/tsconfig": "1.1.17",
    "@commitlint/cli": "19.0.2",
    "@commitlint/config-conventional": "19.0.0",
    "@iconify-json/tabler": "1.1.105",
    "@tailwindcss/typography": "0.5.10",
    "@types/markdown-it": "13.0.7",
    "@types/node": "20.11.21",
    "@types/sanitize-html": "2.11.0",
    "autoprefixer": "10.4.17",
    "commitizen": "4.3.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vite": "5.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome check && tsc"
    ],
    "*.{yml,cjs,mjs,js,jsx,ts,tsx,json,css,html,md}": [
      "biome check"
    ]
  }
}
