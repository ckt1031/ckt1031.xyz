---
import { Icon } from 'astro-icon/components';

import config from '@/config';

const footerSocialLinks = [
	{
		title: 'Instagram',
		href: config.social.instagram,
		icon: 'tabler:brand-instagram',
	},
	{
		title: 'GitHub',
		href: config.social.github,
		icon: 'tabler:brand-github',
	},
	{
		title: 'YouTube',
		href: config.social.youtube,
		icon: 'tabler:brand-youtube',
	},
	{
		title: 'RSS',
		href: config.social.feed,
		icon: 'tabler:rss',
	},
];
---

<footer class="footer-default" data-pagefind-ignore="all">
  <div class="flex flex-row gap-3">
    {
      footerSocialLinks.map(({ title, href, icon }) => (
        <a href={href} title={title} aria-label={title}>
          <Icon name={icon} size={24} />
        </a>
      ))
    }
  </div>
  <div class="flex flex-col items-center justify-center gap-1 sm:flex-row sm:gap-3">
    {
      config.footer.routes.map(item => {
        return (
          <span>
            <a href={item.href} class="text-sm text-blue-600 dark:text-blue-400" title={item.name}>
              {item.name}
            </a>
          </span>
        );
      })
    }
  </div>
  <p>
    &copy; {new Date().getFullYear()}{' '}
    {config.author}
  </p>
</footer>
