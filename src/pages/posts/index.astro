---
import sAgo from 's-ago';
import clsx from 'clsx';
import MainLayout from '@/layouts/main.astro';
import PageTitle from '@/components/PageTitle.astro';

import { getCollection } from 'astro:content';

const allPosts = (await getCollection('posts')).sort((a, b) => b.published - a.published);
---

<MainLayout>
  <div class="mt-5 w-full max-w-[1000px]">
    <div class="mb-2">
      <PageTitle
        title="Blog"
        description="Welcome to my blog, where I embark on a journey of sharing knowledge and meaningful insights with the world."
      />
    </div>
    <div class="grid space-y-5 divide-y-2 divide-gray-400 dark:divide-gray-500">
      {
        allPosts.length > 0 ? (
          allPosts.map(({ data, slug }) => {
            return (
              <div class="flex w-full flex-col justify-between py-4 md:flex-row md:space-x-5">
                <div
                  class={clsx(
                    data.heroImage && 'mb-3 md:mb-0 md:max-w-[400px]',
                    'flex max-h-fit flex-col justify-between break-words',
                  )}
                >
                  <div>
                    <a
                      class="cursor-pointer text-2xl font-semibold hover:underline"
                      href={`/posts/${slug}`}
                    >
                      {data.title}
                    </a>
                    <p class="text-gray-600 dark:text-gray-300">{data.description}</p>
                  </div>
                  <p class="mt-3 text-gray-500 dark:text-gray-400">
                    {sAgo(new Date(data.published))}
                  </p>
                </div>
                {data.heroImage && (
                  <img
                    alt="Thumbnail"
                    class="rounded md:mt-0"
                    src={data.heroImage}
                    width={1600 * 0.15}
                    height={900 * 0.15}
                  />
                )}
              </div>
            );
          })
        ) : (
          <div class="flex flex-col items-center">
            <p class="p-5">Nothing can be found!</p>
          </div>
        )
      }
    </div>
  </div>
</MainLayout>
