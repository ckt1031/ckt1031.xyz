---
import { Image } from 'astro:assets';

import Avatar from '@/assets/avatar.png';
import MainLayout from '@/layouts/main.astro';
---

<MainLayout>
  <div class="my-10 flex flex-col items-center justify-center text-center">
    <Image
      alt="ckt"
      src={Avatar}
      class="h-32 w-32 rounded-full"
      height={150}
      width={150}
    />
    <h1 class="mt-4 text-4xl font-bold">Chan Ka Tsun</h1>
    <p class="mt-2 text-lg font-medium italic text-gray-600 dark:text-gray-300">
      A secondary school (Form 6) student in Hong Kong.
    </p>
  </div>
</MainLayout>
